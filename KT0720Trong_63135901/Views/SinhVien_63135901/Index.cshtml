@model IEnumerable<KT0720Trong_63135901.Models.SinhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenSV", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<html>
    <head>
        <style type="text/css">
            .grid-footer {
                color: #000;
                font: 17px Calibri;
                text-align: center;
                font-weight: bold;
            }

                .grid-footer a {
                    background-color: #ffffff;
                    color: blue;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                    padding: 1px 10px 2px 10px;
                }

                    .grid-footer a:active, a:hover {
                        background-color: #ffffff;
                        color: #FFAD33;
                        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                    }

            .alternatingRowStyle {
                background-color: aliceblue;
            }

            table .table1 {
                text-align: left;
                margin-left: 0px;
                margin-right: 0px;
                width: 800px;
            }

            .tr, .td {
                text-align: left;
            }
        </style>
    </head>


    <body>
        <div id="gridContent">
            @ViewBag.TB
            @grid.GetHtml(
                tableStyle: "table table-bordered table-hover",
                footerStyle: "grid-footer",
                fillEmptyRows: true,
                mode: WebGridPagerModes.Numeric,
                alternatingRowStyle: "alternatingRowStyle",
                  columns: new[]  // colums in grid
                 {
             grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
            grid.Column("MaSV","Mã nhân viên"), //the model fields to display
            grid.Column("HoSV","Họ nhân viên"  ),
            grid.Column("TenSV","Tên nhân viên"),
            grid.Column("GioiTinh","Giới tính",format: (@item) => @item.GioiTinh==true?"Nam":"Nữ"),
            grid.Column("NgaySinh","Ngày sinh",format:@<text> @item.NgaySinh.ToString("dd/MM/yyyy")</text>),
            grid.Column("AnhSV","Ảnh sinh viên"),
            grid.Column("DiaChi","Địa chỉ"),
            grid.Column("MaLop","Lớp"),


            grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","SinhVien_63135901", new { id = item.MaSV },"SinhVien_63135901Controller")),
}
)
        </div>


    </body>
</html>
