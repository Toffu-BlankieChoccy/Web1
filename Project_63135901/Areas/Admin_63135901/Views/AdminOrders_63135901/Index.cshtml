@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Project_63135901.Models.Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin_63135901/Views/Shared/_AdminLayout63135901.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin_63135901" asp-controller="HomeController_63135901" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách đơn hàng - page @ViewBag.CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Đơn hàng</th>
                        <th>Ngày mua</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {

                            <tr>
                                <td>@item.OrderId</td>
                                <td>@item.Customers.FullName</td>
                                <td>@item.OrderDate</td>
                                <td>@item.TotalMoney.Value.ToString("#,##0") VNĐ</td>
                                <td>@item.TransactStatus.TransStatus</td>

                                <td>
                                    <a asp-area="Admin_63135901" asp-controller="AdminOrders_63135901" asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-primary btn-tone m-r-5">Xem đơn hàng</a>
                                    <a asp-area="Admin_63135901" asp-controller="AdminOrders_63135901" asp-action="ChangeStatus" asp-route-id="@item.OrderId" class="btn btn-secondary btn-tone m-r-5">Cập nhật trạng thái</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin_63135901" asp-controller="AdminOrders_63135901" asp-action="Index"></pager>
                </ul>
            </div>
        </div>
    </div>
</div>

