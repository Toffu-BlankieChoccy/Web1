@using PagedList.Core.Mvc;
@model PagedList.Core.IPagedList<Project_63135901.Models.Customer>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách khách hàng" + CurrentPage;
    Layout = "~/Areas/Admin_63135901/Views/Shared/_AdminLayout63135901.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin_63135901" asp-controller="HomeController_63135901" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách khách hàng: Page @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-12">
                <div class="d-md-flex">
                   
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <div style="position: absolute; right: 0; top: 0;">
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="" list="@Model" asp-area="Admin_63135901" asp-controller="AdminCustomers_63135901" asp-action="Index">
                        </pager>
                    </ul>
                </div>
            </div>
            
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach(var item in Model)
                        {
                            <tr>                           
                                <td>
                                    @item.CustomersId
                                </td>
                                <td>
                                    @item.FullName
                                </td
                                ><td>
                                    @item.Phone
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @item.CusAddress
                                </td>
                                @if (item.Location != null)
                                {
                                    <td>
                                        @item.Location.LocationName
                                    </td>
                                }
                                else
                                {
                                    <td>Location Not Available</td>
                                }
                                <td>
                                    <a class="btn btn-primary m-r-5" asp-area="Admin_63135901" asp-controller="AdminCustomers_63135901" asp-action="Details" asp-route-id="@item.CustomersId">View</a>
                                    <a class="btn btn-warning m-r-5" asp-area="Admin_63135901" asp-controller="AdminCustomers_63135901" asp-action="Edit" asp-route-id="@item.CustomersId">Edit</a>
                                    <a class="btn btn-danger m-r-5" asp-area="Admin_63135901" asp-controller="AdminCustomers_63135901" asp-action="Delete" asp-route-id="@item.CustomersId">Delete</a>

                                </td>
                            </tr>

                        }

                    }
                </tbody>
            </table>
            <div style ="position: absolute; right: 0;">
                <div style="right:0" aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="page-container" list="@Model" asp-area="Admin_63135901" asp-controller="AdminCustomers_63135901" asp-action="Index">
                        </pager>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
</div>