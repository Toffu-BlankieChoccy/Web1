@model Project_63135901.ModelViews.MuaHangSuccessVM
@{
    ViewData["Title"] = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    <div class="about-banner different-bg-position section-space-y-axis-100" data-bg-image="assets/images/about/banner/bg.jfif">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-5">
                    <div class="parallax-img-wrap">
                        <div class="papaya">
                            <div class="scene fill">
                                <div class="expand-width" data-depth="0.2">
                                    <img src="~/assets/images/shipping/icon/thankyou.png" alt="Banner Images">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7 align-self-center">
                    <div class="about-banner-content">
                        <div class="section-title">
                            <span class="sub-title">Thông tin đơn hàng</span>
                            <p>Cảm ơn bạn đã đặt hàng</p>
                            <h2 class="title font-size-60 mb-6"></h2>
                            <p>Thông tin khách hàng</p>
                            <p>Họ và tên: @Model.FullName</p>
                            <p>Số điện thoại: @Model.Phone</p>
                            <p>Địa chỉ : @Model.Address, @Model.PhuongXa, @Model.TinhThanh</p>
                            <div class="button-wrap pt-8">
                                <a class="btn btn-custom-size lg-size btn-primary btn-dark-hover rounded-0" href="shop.html">Shop More</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
